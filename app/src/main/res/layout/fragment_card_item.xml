<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_card_view_repository_list_author_picture"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="4dp"
            android:background="@color/grey"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="4dp"
            android:paddingBottom="2dp"
            android:src="@drawable/iphone_dream_photo"
            android:scaleType="fitCenter"
            app:shapeAppearanceOverlay="@style/Circular" />

        <ProgressBar
            android:id="@+id/pb_dream_image_home"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:padding="1dp"
            android:progressDrawable="@drawable/shape_circular_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="100"
            android:layout_alignLeft="@+id/siv_card_view_repository_list_author_picture"
            android:layout_alignTop="@+id/siv_card_view_repository_list_author_picture"        />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_car_view_repository_list_dream_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:text="Iphone"
        android:textColor="@color/old_gold"
        android:gravity="center"/>


</LinearLayout>