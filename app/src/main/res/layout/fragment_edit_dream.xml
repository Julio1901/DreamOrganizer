<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".features.dreams.presentation.fragments.EditDreamFragment">



    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bt_back_to_home_edit_dream"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp"
        app:srcCompat="@drawable/ic_arrow_back" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_display_dream_image_add_new_dream"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="@color/old_gold"
        android:background="@drawable/background_shape_gradient_old"
        app:strokeWidth="3dp"
        app:srcCompat="@drawable/iphone_dream_photo" />


    <TextView
        android:id="@+id/tv_dream_name_edit_dream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iphone 13"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal"

            >



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/plus_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_plus_money_reserved_edit_dream"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/black"
                    android:drawableBottom="@drawable/ic_plus"
                    android:drawableTint="@color/white"
                    android:layout_marginEnd="4dp"
                    />

                <Button
                    android:id="@+id/bt_plus_total_value_edit_dream"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/black"
                    android:drawableBottom="@drawable/ic_plus"
                    android:drawableTint="@color/white"
                    android:layout_marginEnd="4dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/values_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text="Money reserved  R$"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_total_money_reserved_value_edit_dream"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.400,00"
                        android:textColor="@color/white" />

                </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:gravity="start"
                    android:text="Total Value  R$"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_total_money_needed_value_edit_dream"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.000,00"
                    android:textColor="@color/white" />
            </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_subtract_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_subtract_money_reserved_edit_dream"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/black"
                    android:drawableBottom="@drawable/ic_subtract"
                    android:drawableTint="@color/white"
                    android:layout_marginEnd="4dp"
                    />




                <Button
                    android:id="@+id/bt_subtract_total_value_edit_dream"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:backgroundTint="@color/black"
                    android:drawableBottom="@drawable/ic_subtract"
                    android:drawableTint="@color/white"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="4dp"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



    <EditText
        android:id="@+id/et_plus_value_edit_dream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:inputType="textPersonName"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Insert here value to plus"
        />

    <Button
        android:id="@+id/bt_plus_amount_reserved_money_edit_dream"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/plus_money_reserved"
        android:backgroundTint="@color/white"
        android:textColor="@color/old_gold"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="28dp"

            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/bt_delete_dream_edit_dream"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:layout_marginStart="8dp"
                app:shapeAppearanceOverlay="@style/Circular"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"
                app:srcCompat="@drawable/ic_close" />




        </LinearLayout>




    </LinearLayout>


</LinearLayout>